<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBarMain"
        android:gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_200"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="BottomAppBar" />

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewMain"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="70dp"
            app:layout_constraintTop_toBottomOf="@id/bottomAppBarMain"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background = "@drawable/d" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNewGame"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="New Game!"
            android:textSize="18sp"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageViewMain" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLoadGame"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Load Game!"
            app:cornerRadius="10dp"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnNewGame" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewHeroes"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Heroes!"
            app:cornerRadius="10dp"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLoadGame" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewSettings"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Settings!"
            app:cornerRadius="10dp"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnViewHeroes" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOADING"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp"/>


    </LinearLayout>








</androidx.constraintlayout.widget.ConstraintLayout>